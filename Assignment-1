# Machine On which war is copied you need to load image
 yum install docker -y
 service docker start
 chmod -R 777 /var/lib/docker
 cd /var/lib/docker
 cd image/
 ls
 docker load -i myimg.tar 
 ls
 cd ..
 ls
 cd
 docker images 
 history
